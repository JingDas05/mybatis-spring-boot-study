<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!-- <classPathEntry location="F:\.m2\repository\mysql\mysql-connector-java\5.1.38\mysql-connector-java-5.1.38.jar"/> -->

    <context id="MySqlContext" targetRuntime="MyBatis3" defaultModelType="flat">
        <!--指定数据库的分隔符-->
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <!--指定编码格式-->
        <property name="javaFileEncoding" value="UTF-8"/>

        <!--注释配置-->
        <!--这个地方可以继承DefaultCommentGenerator,实现自己的注释逻辑-->
        <commentGenerator>
            <!--阻止生成的注释包含时间戳-->
            <property name="suppressDate" value="true"/>
            <!--添加数据库表的备注信息-->
            <property name="addRemarkComments" value="true"/>
        </commentGenerator>

        <!--<jdbcConnection driverClass="com.mysql.jdbc.Driver"-->
        <!--connectionURL="jdbc:mysql://localhost:3306/mybatis"-->
        <!--userId="root"-->
        <!--password="123456">-->
        <!--</jdbcConnection>-->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/mybatis1"
                        userId="root"
                        password="0109QWe">
        </jdbcConnection>


        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!--配置 实体类 生成规则-->
        <javaModelGenerator targetPackage="sample.mybatis.domain" targetProject="src\main\java">
            <property name="trimStrings" value="true"/>
            <!--设置所有实体类的基类-->
            <!--<property name="rootClass" value="tk.mybatis.simple.model.BaseEntity"/>-->
            <property name="enableSubPackages" value="true"/>
        </javaModelGenerator>

        <!--指定了，MBG将生成XML的SQL映射文件-->
        <!--<sqlMapGenerator targetPackage="mapper" targetProject="src\main\resources"/>-->
        <sqlMapGenerator targetPackage="sample.mybatis.mapper" targetProject="src\main\resources"/>

        <!--生成Mapper接口 配置项-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="sample.mybatis.mapper" targetProject="src\main\java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!--这里配置的表才能经过上述配置生成最终的代码，配置所有的表-->

        <!--<table tableName="%">-->
            <!--<generatedKey column="id" sqlStatement="MySql"/>-->
        <!--</table>-->
        <!--各个表的配置-->
        <!--<table tableName="sys_role" domainObjectName="SysRole">-->
        <!--<generatedKey column="id" sqlStatement="MYSQL" identity="true" type="post"/>-->
        <!--</table>-->

        <table tableName="t_city" domainObjectName="City">
            <!--<generatedKey column="id" sqlStatement="MYSQL" identity="true" type="post"/>-->
        </table>

        <table tableName="t_hotel" domainObjectName="Hotel">
        </table>

    </context>
</generatorConfiguration>